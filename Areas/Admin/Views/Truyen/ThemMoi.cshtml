@model Web_truyen.Models.Truyen

@{
    ViewBag.Title = "Thêm mới truyện";
    Layout = "~/Views/Share/_LayoutPage.cshtml";
}

@using (Html.BeginForm("ThemMoi", "Truyen", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <div class="row">
            <!-- Ảnh bìa -->
            <div class="col-md-4 text-center">
                <img src="~/Content/Images/upload-placeholder.png" alt="Ảnh bìa" class="img-thumbnail mb-3" />
                <div class="mb-3">
                    <label class="form-label">Tải ảnh bìa</label>
                    <input type="file" name="AnhBiaFile" class="form-control" />
                    <small class="form-text text-muted">Định dạng PNG/JPG/GIF, tối đa 2MB</small>
                </div>
            </div>

            <!-- Chi tiết truyện -->
            <div class="col-md-8">
                <div class="card p-4 shadow-sm">
                    <h4 class="card-title border-bottom pb-2">Thông tin truyện</h4>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.TieuDe)
                        @Html.TextBoxFor(model => model.TieuDe, new { @class = "form-control", placeholder = "Nhập tiêu đề" })
                        @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.MoTa)
                        @Html.TextAreaFor(model => model.MoTa, 5, 50, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.TheLoaiId, "Thể loại")
                        @Html.DropDownListFor(model => model.TheLoaiId, (IEnumerable<SelectListItem>)ViewBag.TheLoaiId, "Chọn thể loại", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TheLoaiId, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.TrangThai)
                        @Html.TextBoxFor(model => model.TrangThai, new { @class = "form-control", placeholder = "Ví dụ: Đang cập nhật, Hoàn thành..." })
                    </div>

                    <div class="mb-3 form-check">
                        @Html.CheckBox("XepLoai", Model.XepLoai ?? false, new { @class = "form-check-input" })
                        @Html.Label("XepLoai", "Truyện trưởng thành", new { @class = "form-check-label" })
                    </div>

                    <button type="submit" class="btn btn-primary mt-2">Lưu truyện</button>
                </div>
            </div>
        </div>
    </div>
}
